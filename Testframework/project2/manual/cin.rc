int x_global;
float y_global;

function: void main() {

    int x;
    float y;

    cout << "Enter an int (local): ";
    cin >> x;
    cout << "You entered: " << x << endl << endl;

    cout << "Enter an int (global): ";
    cin >> x_global;
    cout << "You entered: " << x_global << endl << endl;

    cout << "Enter a float (local): ";
    cin >> y;
    cout << "You entered: " << y << endl << endl;

    cout << "Enter a float (global): ";
    cin >> y_global;
    cout << "You entered: " << y_global << endl << endl;
}
